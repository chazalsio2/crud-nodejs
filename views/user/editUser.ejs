<%- include('../layout/header.ejs') %> 

<div class="container">
    <div class="row">
        <div class="col-lg-12 mt-6">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 mx-auto mt-4">
                        <div class="card shadow">
                            <div class="card-header bg-primary"> 
                                <h3>Modifier <%= user.lastname %> <%= user.name %> </h3>
                            </div>
                            <div class="card-body p-4">
                                <form action="/update_user/<%=user._id%>" method='post' name="from" id="add-form">
                                    <div class="mb-3">
                                        <label for="name">Prenom</label>
                                        <input value="<%= user.name %>" name="name" class="form-control form-control-lg mb-3" placeholder="Entrer votre prenom" required/>
                                    </div>
                                    <div class="mb-3">
                                        <label for="lastname">Nom</label>
                                        <input value="<%= user.lastname %>" name="lastname" class="form-control form-control-lg mb-3" placeholder="Entrer votre Nom" required/>
                                    </div>
                                    <div class="mb-3">
                                        <label for="email">Email</label>
                                        <input value="<%= user.email %>" type="mail" name="email" class="form-control form-control-lg mb-3" placeholder="Entrer votre Email" required/>
                                    </div>
                                    <div class="mb-3">
                                        <label for="age">Age</label>
                                        <input value="<%= user.age %>" type="number" name="age" class="form-control form-control-lg "  placeholder="Entrer votre prenom" required />
                                    </div>
                                    <div class="mb-3 d-grid">
                                        <input type="submit" name="submit"  class="btn btn-primary btn-lg">
                                    </div>
                                </form> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../layout/footers') %> 