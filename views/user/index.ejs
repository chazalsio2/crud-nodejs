<%- include('../layout/header.ejs') %> 

<div class="container">
    <div class="row">
        <div class="col-lg-12 mt-4">
            <% if (users != '') { %>
             <div class="table-responsive"> 
                <table class="table table-striped text-center">
                    <thead>
                        <tr class="table-dark">
                            <th> Nom </th>
                            <th> Prenom </th>
                            <th> Email </th>
                            <th> Age  </th>
                            <th> Action  </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((row, index) => { %>
                            <tr class="">
                                <td> <%= row.lastname%></td></a>
                                <td> <%= row.name %> </td></a>
                                <td> <%= row.email %> </td>
                                <td> <%= row.age %> </td>
                                <td> 
                                    <a href="/user/<%=row._id%>" class="text-success">Voir</a>
                                    <a href="/EditeUser/<%=row._id%> " class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    <a href="/deleteUser/<%=row._id%>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <% }else{ %>
                <h1 class="text-center text-secondary mt-5">Aucun utilisateur ajouter</h1>
            <% } %> 
        </div>
    </div>
</div>

<%- include('../layout/footers') %> 