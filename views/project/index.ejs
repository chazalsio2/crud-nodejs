<%- include('../layout/header.ejs') %> 

<div class="container">
    <div class="row">
        <div class="col-lg-12 mt-4">
            <% if (project != '') { %>
             <div class="table-responsive"> 
                <table class="table table-striped text-center">
                    <thead>
                        <tr class="table-dark">
                            <th> Type </th>
                            <th> Localisaton </th>
                            <th> Ressource manquant</th>
                            <th> Estimation des ressource a prevoir  </th>
                            <th> Description </th>
                            <th>acheteur</th>
                            <th> Action  </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% project.forEach((row, index) => { %>
                            <tr class="">
                                <td> <%= row.type%></td></a>
                                <td> <%= row.localisaton %> </td></a>
                                <td> <%= row.ressource %> </td>
                                <td> <%= row.estimation %> </td>
                                <td> <%= row.description %> </td>
                                <td> <%= row.buyerId %> </td>
                                <td> 
                                    <a href="/project/<%=row._id%>" class="text-success">Voir</a>
                                    <a href="/EditeProject/<%=row._id%> " class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <% }else{ %>
                <h1 class="text-center text-secondary mt-5">Aucun utilisateur ajouter</h1>
            <% } %> 
        </div>
    </div>
</div>

<%- include('../layout/footers') %> 